# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space

[*.py]
indent_size = 4

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[Makefile]
indent_size = 4
indent_style = tab

[*.json]
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.{html,css}]
indent_size = 4
